                        <tr>
                            <th>Cecha</th>
                            <th>Wartosc</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% let x = JSON.parse(character.stats);%>
                        <% Object.keys(x).forEach((key) => { %>
                        <tbody>
                        <tr>
                            <td><%- key %></td>
                            <td><%- x[key] %></td>
                        </tr>
                        </tbody>
                        <%})%>
                    </table>
