            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-4 text-gray-800 text-center"><%- character.name %></h1>
                <span style="color: <%- character.alive ? "#28a745;" : "#dc3545;"%>"><h4 class="text-center small"><%- character.alive ? "Ta postac zyje" : "Ta postac nie zyje"%></h4></span>
