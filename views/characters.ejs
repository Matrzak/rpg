    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <br/>
        <!-- Main Content -->
        <div id="content">

            <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                <i class="fa fa-bars"></i>
            </button>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-4 text-gray-800">Moje Postacie</h1>

                <a href="characters/create" class="btn btn-primary btn-icon-split">
                    <span class="icon text-white-50">
                      <i class="fas fa-flag"></i>
                    </span>
                    <span class="text">Dodaj nowa postac</span>
                </a>
                <hr/>
                <div class="row">
                    <% characters.forEach((chemp) => {%>
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card" style="width: 18rem; height: 20rem;">
                                <div class="card-body">
                                    <h5 class="card-title"><%- chemp.name %></h5>
                                    <p class="card-text small text-dark">
                                        Uniwersum:<br/><%- chemp.universe %><br/><br/>
                                        Data stworzenia:<br/> 01.02.2020 15:20:10<br/><br/>
                                        Aktualny stan:<br/> <%- chemp.alive ? "Zyje" : "Nie zyje" %><br/><br/>
                                        Unikalne ID:<br/> <%- chemp.id %>
                                        <br/>
                                        <a href="<%- "characters/info/"+chemp.id%>" class="card-link">Pelne statystyki</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    <% });%>
                </div>

            </div>
